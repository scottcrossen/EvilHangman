<?xml version="1.0" encoding="utf-8"?>
<manifest package="cs240.byu.edu.evilhangman_android"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/evilhangman"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".GamePlay"
            android:label="@string/title_activity_game_play"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".SelectDictionary"
                  android:label="@string/title_activity_select_dictionary">
        </activity>
    </application>

</manifest>
